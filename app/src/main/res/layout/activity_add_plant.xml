<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".AddObjectActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/client_lastname"/>


    <EditText
        android:id="@+id/plant_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/volume_eau_journalier_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume d'eau journalier"
        tools:text="volume d'eau journalier" />


    <EditText
        android:id="@+id/volume_eau_journalier_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nombre_arrosage_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre arrosage"
        tools:text="nombre arrosage" />

    <EditText
        android:id="@+id/nombre_arrosage_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/titre_humidite_plant_consigne_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidité plante consigne"

        tools:text="humidité plante consigne" />

    <EditText
        android:id="@+id/humidite_plant_consigne_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/plant_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ajouter_la_plante" />



</LinearLayout>